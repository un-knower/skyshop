<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sitv.skyshop.massagechair.dao.agency.IAgencyUserDao" >

	<resultMap id="BaseResultMap" type="com.sitv.skyshop.massagechair.domain.agency.AgencyUser">
		<id property="id" jdbcType="BIGINT" column="user2_sno" />
		<result property="name" jdbcType="VARCHAR" column="user2_name" />
		<result property="code" jdbcType="VARCHAR" column="user2_no" />
		<result property="password" jdbcType="VARCHAR" column="user2_pwd" />
		<result property="level" jdbcType="VARCHAR" column="user_level" />
		<result property="checkCode" jdbcType="VARCHAR" column="user2_check" />
		<result property="agencyUserStatus" jdbcType="VARCHAR" column="user2_status" />
		<result property="createTime" column="cdate" />
<!-- 		<result property="workgroup" column="user2_workgroup" /> -->
		<association property="agency" column="user3_sno" select="com.sitv.skyshop.massagechair.dao.agency.IAgencyDao.get" />
	</resultMap>
	
	<insert id="insert" parameterType="com.sitv.skyshop.massagechair.domain.agency.AgencyUser" statementType="PREPARED">
		INSERT INTO tab_user2
			(user2_name, user_level, user2_no, user2_pwd, user2_status, cdate, user3_sno, user2_check) 
		VALUES 
			(#{name}, #{level.code}, #{code}, #{password}, #{agencyUserStatus.code}, #{createTime}, #{agency.id}, #{checkCode})    
	</insert>
	
	<select id="get" resultMap="BaseResultMap" parameterType="long">
		SELECT * FROM tab_user2 WHERE user2_sno=#{id}
	</select>
	
	<update id="update"  parameterType="com.sitv.skyshop.massagechair.domain.agency.AgencyUser" statementType="PREPARED" >
		UPDATE tab_user2 
		SET user2_name=#{name}, 
			user_level=#{level.code}, 
			user2_no=#{code}, 
			user2_pwd=#{password}, 
			user2_status=#{agencyUserStatus.code}, 
			cdate=#{createTime}, 
			user2_check=#{checkCode}, 
			<if test="agency != null">
				user3_sno=#{agency.id} 
			</if>
		WHERE user2_sno=#{id}
	</update>
	
	<delete id="delete" parameterType="long" statementType="PREPARED">
	    DELETE FROM tab_user2 WHERE user2_sno=#{id}
	</delete>

	<select id="search" resultMap="BaseResultMap" parameterType="com.sitv.skyshop.dto.SearchParamInfo">
		SELECT *
		FROM tab_user2  
		WHERE 1 = 1 
		<if test="param != null and param.code != null">
			AND user2_no LIKE CONCAT('%', #{param.code}, '%')
		</if>
		<if test="param != null and param.name != null">
			AND user2_name LIKE CONCAT('%', #{param.name}, '%')
		</if>
		<if test="param != null and param.level != null">
			AND user_level = #{param.level.code}
		</if>
		<if test="param != null and param.agency != null">
			AND user3_sno = #{param.agency.id}
		</if>
		<if test="sortField != null and sortDir != null">
			ORDER BY ${sortField} ${sortDir}
		</if>
	</select>
	
</mapper>