<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sitv.skyshop.massagechair.dao.user.IUserDao" >

	<resultMap id="BaseResultMap" type="com.sitv.skyshop.massagechair.domain.user.User">
		<id column="id" jdbcType="BIGINT" property="id" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="code" jdbcType="VARCHAR" property="code" />
		<result column="email" jdbcType="VARCHAR" property="email" />
		<result column="description" jdbcType="VARCHAR" property="description" />
		<result column="mobile" jdbcType="VARCHAR" property="mobile" />
		<result column="password" jdbcType="VARCHAR" property="password" />
		<result column="status" jdbcType="VARCHAR" property="status" />
		<result column="createTime" javaType="java.util.Calendar" property="createTime"/>
		<result column="updateTime" javaType="java.util.Calendar" property="updateTime"/>
		<discriminator javaType="java.lang.String" column="type" >
		    <case value="Manager" resultType="com.sitv.skyshop.massagechair.domain.user.Manager">
		        <collection property="roles" column="id" select="getRoles" ofType="com.sitv.skyshop.massagechair.domain.user.Role"/>
		    </case>
		</discriminator>
	</resultMap>
	
	<select id="getRoles" resultMap="com.sitv.skyshop.massagechair.dao.user.IRoleDao.BaseResultMap" parameterType="long">
		SELECT p.* 
		FROM userroles pp 
		LEFT JOIN role p ON pp.roleid=p.id
		WHERE pp.userid=#{id}
	</select>
	
	<insert id="insert" parameterType="com.sitv.skyshop.massagechair.domain.user.User" statementType="PREPARED">
		INSERT INTO users
			(name, code, email, mobile, password, status, description, type) 
		VALUES 
			(#{name}, #{code}, #{email}, #{mobile}, #{password}, #{status}, #{description}, #{type})    
	</insert>
	
	<select id="get" resultMap="BaseResultMap" parameterType="long">
		SELECT * FROM users WHERE id=#{id}
	</select>
	
	<update id="update"  parameterType="com.sitv.skyshop.massagechair.domain.user.User" statementType="PREPARED" >
		UPDATE users 
		SET name=#{name}, 
		 	description=#{description},
		 	email=#{email},
		 	mobile=#{mobile},
		 	status=#{status},
		 	updateTime=#{updateTime}
		WHERE id=#{id}
	</update>
	
	<delete id="delete" parameterType="long" statementType="PREPARED">
	    DELETE FROM users WHERE id=#{id}
	</delete>

	<select id="search" resultMap="BaseResultMap" parameterType="com.sitv.skyshop.dto.SearchParamInfo">
		SELECT m.*
		FROM users m
		WHERE 1 = 1 
		<if test="param != null and param.name != null">
			AND name LIKE CONCAT('%', #{param.name}, '%')
		</if>
		<if test="param != null and param.code != null">
			AND code like CONCAT('%', #{param.code}, '%')
		</if>
		<if test="param != null and param.mobile != null">
			AND mobile like CONCAT('%', #{param.mobile}, '%')
		</if>
		<if test="param != null and param.email != null">
			AND email like CONCAT('%', #{param.email}, '%')
		</if>
		<if test="sortField != null and sortDir != null">
			ORDER BY ${sortField} ${sortDir}
		</if>
	</select>
</mapper>