<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sitv.skyshop.massagechair.dao.device.ISIMCardDao" >

	<resultMap id="BaseResultMap" type="com.sitv.skyshop.massagechair.domain.device.SIMCard">
		<id column="id" jdbcType="BIGINT" property="id" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="description" jdbcType="VARCHAR" property="description" />
		<result column="sim" jdbcType="VARCHAR" property="sim" />
		<result column="dataFlow" jdbcType="INTEGER" property="dataFlow" />
		<result column="dueDate" property="dueDate" />
		<result column="createTime" property="createTime" />
		<result column="updateTime" property="updateTime" />
		<association property="operator" column="operatorid" select="com.sitv.skyshop.massagechair.dao.device.ISIMCardOperatorDao.get"/>
	</resultMap>
	
	<insert id="insert" parameterType="com.sitv.skyshop.massagechair.domain.device.SIMCard" statementType="PREPARED">
		INSERT INTO simcards
			(name, description, sim, dataFlow, dueDate, operatorid) 
		VALUES 
			(#{name}, #{description}, #{sim}, #{dataFlow}, #{dueDate}, #{operator.id})    
	</insert>
	
	<select id="get" resultMap="BaseResultMap" parameterType="long">
		SELECT * FROM simcards WHERE id=#{id}
	</select>
	
	<update id="update"  parameterType="com.sitv.skyshop.massagechair.domain.device.SIMCard" statementType="PREPARED" >
		UPDATE simcards 
		SET name=#{name}, 
		 	description=#{description},
		 	sim=#{sim},
		 	dataFlow=#{dataFlow},
		 	dueDate=#{dueDate},
		 	operatorid=#{operator.id},
		 	updateTime=#{updateTime}
		WHERE id=#{id}
	</update>
	
	<delete id="delete" parameterType="long" statementType="PREPARED">
	    DELETE FROM simcards WHERE id=#{id}
	</delete>

	<select id="search" resultMap="BaseResultMap" parameterType="com.sitv.skyshop.dto.SearchParamInfo">
		SELECT m.*
		FROM simcards m
		LEFT JOIN simcardoperators o ON o.id = m.operatorid
		WHERE 1 = 1 
		<if test="param != null and param.name != null">
			AND name LIKE CONCAT('%', #{param.name}, '%')
		</if>
		<if test="param != null and param.sim != null">
			AND sim like CONCAT('%', #{param.sim}, '%')
		</if>
		<if test="param != null and param.dueDate != null">
			AND dueDate &lt;= #{param.dueDate}
		</if>
		<if test="param != null and param.operator != null and param.operator.name != null">
			AND o.name like CONCAT('%', #{param.operator.name}, '%')
		</if>
		<if test="sortField != null and sortDir != null">
			ORDER BY ${sortField} ${sortDir}
		</if>
	</select>
</mapper>